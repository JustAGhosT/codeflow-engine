# CODEFLOW Engine Environment Configuration
# ===========================================
# SECURITY: Never commit the actual .env file to version control!
# Copy this file to .env and replace all placeholder values.

# ===========================================
# CRITICAL SECURITY SETTINGS
# ===========================================

# Database Credentials
# Generate strong passwords using: openssl rand -base64 32
POSTGRES_DB=CODEFLOW
POSTGRES_USER=CODEFLOW
POSTGRES_PASSWORD=CHANGE_ME_IMMEDIATELY  # TODO: Replace with strong password

# Database Connection URL (overrides alembic.ini sqlalchemy.url)
# Used by Alembic migrations and SQLAlchemy
DATABASE_URL=postgresql://CODEFLOW:CHANGE_ME_IMMEDIATELY@localhost:5432/CODEFLOW

# Redis Credentials
REDIS_PASSWORD=CHANGE_ME_REDIS  # TODO: Replace with strong password

# ===========================================
# GITHUB INTEGRATION (REQUIRED)
# ===========================================
# Get token from: https://github.com/settings/tokens
# Required scopes: repo, workflow, write:packages
GITHUB_TOKEN=ghp_your_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# ===========================================
# AI/LLM PROVIDERS (At least one required)
# ===========================================
# OpenAI - Get key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_key_here

# Anthropic (Optional) - Get key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Mistral (Optional) - Get key from: https://console.mistral.ai/
MISTRAL_API_KEY=

# Groq (Optional) - Get key from: https://console.groq.com/
GROQ_API_KEY=

# ===========================================
# APPLICATION SETTINGS
# ===========================================
CODEFLOW_ENV=development  # Options: development, staging, production
CODEFLOW_HOST=0.0.0.0
CODEFLOW_PORT=8080
CODEFLOW_WORKERS=1
CODEFLOW_LOG_LEVEL=INFO

# ===========================================
# INTEGRATION PLATFORMS (Optional)
# ===========================================

# Slack Integration
SLACK_WEBHOOK_URL=

# Linear Integration
LINEAR_API_KEY=

# Axolo Integration
AXOLO_WORKSPACE_URL=

# ===========================================
# MONITORING & OBSERVABILITY (Optional)
# ===========================================

# Sentry Error Tracking
SENTRY_DSN=

# Prometheus Metrics
PROMETHEUS_ENABLED=true

